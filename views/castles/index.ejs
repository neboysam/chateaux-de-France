<% layout('layouts/boilerplate') %>

<h1>Castles in France</h1>
<div class="mb-3">
    <a class="btn btn-success" href="/castles/new">Add New Castle</a>
</div>
<% for (let castle of castles){%>
<div class="card mb-4">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="castle photo" src="<%= castle.image %>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= castle.title %></h5>
                <p class="card-text"><%= castle.description %></p>
                <p class="card-text">
                    <small class="text-muted">RÃ©gion: <%= castle.location %></small>
                </p>
                <a class="btn btn-primary" href="/castles/<%= castle._id %>">View <%= castle.title %></a>
            </div>
        </div>
    </div>
</div>
<% }%>